<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <ht colspan="3"></ht>
    </tr>
  </thead>
  <tobody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
    </tr>
    <% end %>
  </tobody>
</table>
<h2>New book</h2>

<% if @book.errors.any? %>
<div id="error_explanation">
  <h2><%= @book.errors.count %>  errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model:@book, local:true, class: "new_book", id: "new_book" do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title,class: "book_title" %>
  </div>
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body,class: "book_body" %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>